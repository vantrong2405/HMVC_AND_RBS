{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Rails server",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceFolder}/bin/rails",
      "args": ["server"],
      "cwd": "${workspaceFolder}",
      "env": {
        "RAILS_ENV": "development"
      }
    },
    {
      "name": "RSpec - active spec file only",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceFolder}/bin/rspec",
      "args": ["${file}"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
