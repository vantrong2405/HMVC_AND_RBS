{
  // ===== RUBY LSP CONFIGURATION =====
  "ruby.useLanguageServer": true,
  "ruby.lint": {
    "rubocop": {
      "useBundler": true
    }
  },
  "ruby.format": "rubocop",
  "ruby.intellisense": "rubyLsp",
  "ruby.defaultCommand": "bundle",
  "ruby.workspaceRoot": "./",
  "ruby.requireBundler": true,

  // ===== COMPLETELY DISABLE SOLARGRAPH =====
  "solargraph.transport": "external",
  "solargraph.externalServer": {
    "host": "localhost",
    "port": 7658
  },
  // ===== COMPLETELY DISABLE REBORNIX RUBY =====
  "ruby.useBundler": true,
  "ruby.lint": {
    "rubocop": {
      "useBundler": true
    }
  },
  "ruby.format": "rubocop",
  "ruby.intellisense": "rubyLsp",
  "ruby.defaultCommand": "bundle",
  "ruby.workspaceRoot": "./",
  "ruby.requireBundler": true,
  "ruby.useLanguageServer": true,
  "ruby.languageServer": "rubyLsp",
  "ruby.lintOnSave": false,
  "ruby.formatOnSave": false,
  "ruby.autoFormat": false,
  "ruby.autoLint": false,
  "ruby.autoComplete": false,
  "ruby.autoHover": false,
  "ruby.autoSignatureHelp": false,
  "ruby.autoGoToDefinition": false,
  "ruby.autoReferences": false,
  "ruby.autoSymbolSearch": false,
  "ruby.autoCodeActions": false,
  "ruby.autoCodeLens": false,
  "ruby.autoDocumentSymbols": false,
  "ruby.autoFoldingRanges": false,
  "ruby.autoSelectionRanges": false,
  "ruby.autoLinkedEditingRanges": false,
  "ruby.autoCallHierarchy": false,
  "ruby.autoTypeHierarchy": false,
  "ruby.autoWorkspaceSymbols": false,
  "ruby.autoDocumentLinks": false,
  "ruby.autoColorProviders": false,
  "ruby.autoRangeFormatting": false,
  "ruby.autoOnTypeFormatting": false,
  "ruby.autoRename": false,
  "ruby.autoPrepareRename": false,
  "ruby.autoCompletion": false,
  "ruby.autoHover": false,
  "ruby.autoSignatureHelp": false,
  "ruby.autoDefinition": false,
  "ruby.autoTypeDefinition": false,
  "ruby.autoImplementation": false,
  "ruby.autoReferences": false,
  "ruby.autoDocumentHighlight": false,
  "ruby.autoDocumentSymbol": false,
  "ruby.autoCodeAction": false,
  "ruby.autoCodeLens": false,
  "ruby.autoDocumentLink": false,
  "ruby.autoRename": false,
  "ruby.autoExecuteCommand": false,
  "ruby.autoWorkspaceSymbol": false,
  "ruby.autoFoldingRange": false,
  "ruby.autoSelectionRange": false,
  "ruby.autoLinkedEditingRange": false,
  "ruby.autoCallHierarchy": false,
  "ruby.autoTypeHierarchy": false,
  "ruby.autoSemanticTokens": false,
  "ruby.autoInlayHint": false,
  "ruby.autoDiagnostic": false,
  "ruby.autoProgress": false,
  "ruby.autoWorkDoneProgress": false,
  "ruby.autoNotification": false,
  "ruby.autoRequest": false,
  "ruby.autoResponse": false,
  "ruby.autoError": false,
  "ruby.autoWarning": false,
  "ruby.autoInfo": false,
  "ruby.autoDebug": false,
  "ruby.autoTrace": false,
  "ruby.autoVerbose": false,
  "ruby.autoOff": false,

  // ===== ENABLE RUBY LSP FULLY =====
  "rubyLsp.enabled": true,
  "rubyLsp.formatter": "rubocop",
  "rubyLsp.diagnostics": true,
  "rubyLsp.completion": true,
  "rubyLsp.hover": true,
  "rubyLsp.signatureHelp": true,
  "rubyLsp.definition": true,
  "rubyLsp.typecheck": true,
  "rubyLsp.references": true,
  "rubyLsp.rename": true,
  "rubyLsp.symbolSearch": true,
  "rubyLsp.codeActions": true,
  "rubyLsp.inlayHint": true,
  "rubyLsp.documentHighlights": true,
  "rubyLsp.documentSymbols": true,
  "rubyLsp.foldingRanges": true,
  "rubyLsp.selectionRanges": true,
  "rubyLsp.semanticHighlighting": true,
  "rubyLsp.onTypeFormatting": true,
  "rubyLsp.codeLens": true,
  "rubyLsp.executeCommand": true,
  "rubyLsp.linkedEditingRange": true,
  "rubyLsp.callHierarchy": true,
  "rubyLsp.typeHierarchy": true,
  "rubyLsp.workspaceSymbols": true,
  "rubyLsp.documentLink": true,
  "rubyLsp.colorProvider": true,
  "rubyLsp.documentColor": true,
  "rubyLsp.colorPresentation": true,
  "rubyLsp.rangeFormatting": true,
  "rubyLsp.prepareRename": true,
  "rubyLsp.typeDefinition": true,
  "rubyLsp.implementation": true,
  "rubyLsp.documentHighlight": true,
  "rubyLsp.documentSymbol": true,
  "rubyLsp.codeAction": true,
  "rubyLsp.semanticTokens": true,
  "rubyLsp.progress": true,
  "rubyLsp.workDoneProgress": true,
  "rubyLsp.notification": true,
  "rubyLsp.request": true,
  "rubyLsp.response": true,
  "rubyLsp.error": true,
  "rubyLsp.warning": true,
  "rubyLsp.info": true,
  "rubyLsp.debug": true,
  "rubyLsp.trace": true,
  "rubyLsp.verbose": true,
  "rubyLsp.off": false,
  "rubyLsp.bundleGemfile": "${workspaceFolder}/Gemfile",
  "rubyLsp.rubyVersionManager": "system",

  // ===== DISABLE OTHER RUBY EXTENSIONS =====
  "ruby-syntax-highlighting.enabled": false,
  "ruby-syntax-highlighting.diagnostics": false,
  "ruby-syntax-highlighting.completion": false,
  "ruby-syntax-highlighting.hover": false,
  "ruby-syntax-highlighting.signatureHelp": false,
  "ruby-syntax-highlighting.definition": false,
  "ruby-syntax-highlighting.references": false,
  "ruby-syntax-highlighting.rename": false,
  "ruby-syntax-highlighting.symbolSearch": false,
  "ruby-syntax-highlighting.codeActions": false,

  // ===== GENERAL SETTINGS =====
  "files.associations": {
    "*.rb": "ruby",
    "*.erb": "erb"
  },
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "files.exclude": {
    "**/vendor": true,
    "**/.bundle": true,
    "**/sig": true,
    "**/tmp": true,
    "**/log": true
  },
  "[ruby]": {
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.showSnippets": false,
    "editor.snippetSuggestions": "bottom",
    "editor.suggestOnTriggerCharacters": true,
    "editor.quickSuggestions": { "other": true, "comments": false, "strings": true },
    "editor.suggest.localityBonus": true,
    "editor.suggestSelection": "first"
  }
}
